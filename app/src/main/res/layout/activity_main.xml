<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ingenieria.searchway.Main">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Go to Map                   >"
        android:textColor="#fffffffb"
        android:textSize="25dp"
        android:background="@color/color_rojo"
        android:id="@+id/btnGoMap"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:layout_below="@+id/btnGoMap"
        android:id="@+id/btnIngresar"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/btnSalir"
        android:layout_below="@+id/btnIngresar"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSalir"
        android:id="@+id/tvEstado"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lvParametros"
        android:layout_below="@+id/tvEstado"></ListView>


</RelativeLayout>
